# mod_rewrite starts here

RewriteEngine on 

# does not apply to existing directories, meanting that if the folder exists on the server then don't change anything and don't run the rule

RewriteCond %{REQUEST_FILENAME} !-d

# Check for file in directory with .html extention

RewriteCond %{REQUEST_FILENAME}\.html -f/

# Here we show the page that has the .html extention

RewriteRule ^(.*)$ $1.html [NC,L]

